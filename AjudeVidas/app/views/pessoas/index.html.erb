<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>


  <div class="row">
    <div class="actions col-xs-12 text-right">      
      <%= link_to 'New Pessoa', new_pessoa_path ,class: 'btn btn-default navbar-btn' %>
    </div>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Endereco</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.endereco %></td>
        <td><%= pessoa.latitude %></td>
        <td><%= pessoa.longitude %></td>
        <td><%= pessoa.telefone %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


  

