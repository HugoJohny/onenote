<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Endereco</th>
      <th>Latidade</th>
      <th>Longitude</th>
      <th>Status</th>
      <th>Quantidade</th>
      <th>Pessoa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.titulo %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.endereco %></td>
        <td><%= produto.latidade %></td>
        <td><%= produto.longitude %></td>
        <td><%= produto.status %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.pessoa.nome %></td>
        <td><%= link_to 'Show', produto %></td>
        <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
        <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

