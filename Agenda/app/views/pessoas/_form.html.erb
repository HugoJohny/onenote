<%= form_for(@pessoa, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @pessoa.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h4>

      <ul>
      <% @pessoa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nome, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fantasia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :fantasia, class: "form-control" %>
    </div>
  </div> 

  <div class="form-group">
    <%= f.label :cep, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :cep, class: "form-control" %>
    </div>


    <%= f.label :endereco, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :endereco, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cidade, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :cidade, class: "form-control" %>
    </div>

    <%= f.label :pais, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :pais, class: "form-control" %>
    </div>

    <%= f.label :estado, class: "col-sm-2 control-label" %>
    <div class="col-sm-1">
      <%= f.text_field :estado,  class: "form-control"  %>
    </div>
  </div>


   <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
   </div>
   
   <div class="form-group">
    <%= f.label :comercial, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :comercial, class: "form-control"  %>
    </div>

    <%= f.label :celular, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :celular, class: "form-control" %>
    </div>

    <%= f.label :residencial, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :residencial, class: "form-control"  %>
    </div>
  </div>     

  <div class="form-group">
    <%= f.label :observacao, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :observacao ,:rows => 10, class: "form-control"   %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
