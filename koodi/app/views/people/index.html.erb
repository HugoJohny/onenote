<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nomefantasia</th>
      <th>Cpf</th>
      <th>Cnpj</th>
      <th>Rg</th>
      <th>Tipopessoa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nome %></td>
        <td><%= person.nomeFantasia %></td>
        <td><%= person.cpf %></td>
        <td><%= person.cnpj %></td>
        <td><%= person.rg %></td>
        <td><%= person.tipoPessoa %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

